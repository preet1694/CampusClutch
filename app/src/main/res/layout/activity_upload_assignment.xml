<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray"
    tools:context=".UploadAssignmentActivity">

    <!-- Title of the page -->
    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Assignment"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Assignment Title Input -->
    <EditText
        android:id="@+id/etAssignmentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Assignment Title"
        android:padding="12dp"
        android:backgroundTint="@color/dark_blue"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Assignment Description Input -->
    <EditText
        android:id="@+id/etAssignmentDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Assignment Description"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:backgroundTint="@color/dark_blue"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etAssignmentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Select File Button -->
    <Button
        android:id="@+id/btnSelectAssignmentFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select File"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etAssignmentDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Display Selected File Name -->
    <TextView
        android:id="@+id/tvAssignmentFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btnSelectAssignmentFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Upload File Button -->
    <Button
        android:id="@+id/btnUploadAssignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Upload Assignment"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_green"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvAssignmentFileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
